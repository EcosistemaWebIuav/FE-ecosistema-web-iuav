<footer class="site-footer" id="site-footer" role="contentinfo">
    <button class="site-footer__backTop" id="backToTop">Torna in cima</button>
    <div class="grid-container site-footer__title">
        {% include "../assets/img/logo.svg" %}
        <p><span>Universit√†</span> Iuav di Venezia</p>
    </div>
    <div class="grid-container site-footer__main">
        <div>
            <span>Contatti</span>
            <p>
                {{site.global.address}}<br>
                C.F. {{site.global.law.cf}}<br>
                P.IVA {{site.global.law.vat}}
            </p>
        </div>
        <div class="site-footer__nav">
            <span>{{blocks.footer.nav[0].name}}</span>
            <nav aria-label="Amministrazione" role="navigation">
                <ul>
                    {% for item in blocks.footer.nav[0].children %}
                        <li><a href="{{item.url}}">{{item.name}}</a></li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
        <div class="site-footer__nav">
            <span>{{blocks.footer.nav[1].name}}</span>
            <nav aria-label="In evidenza" role="navigation">
                <ul>
                    {% for item in blocks.footer.nav[1].children %}
                        <li><a href="{{item.url}}">{{item.name}}</a></li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
        <div class="site-footer__social-links" aria-label="Link social" role="navigation">
            <span>Seguici su</span>
            <ul>
                {% for item in blocks.footer.social_links %}
                    <li><a href="{{item.url}}">{{item.name}}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="grid-container site-footer__colophon">
        <nav aria-label="Link a rubrica e area riservata" role="navigation">
            <ul>
                {% for item in blocks.footer.colophon.nav %}
                    <li><a href="{{item.url}}">{{item.name}}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</footer>